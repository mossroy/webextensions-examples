{

  "description": "Altering HTTP responses inside a webextension",
  "manifest_version": 2,
  "name": "http-response-filter-webextension",
  "version": "1.0",
  "homepage_url": "https://github.com/mossroy/webextensions-examples/tree/master/http-response",
  "icons": {
    "48": "pen.svg"
  },
  
  "browser_action": {
    "default_icon": {
      "64": "pen-64.png"
    },
    "default_title": "http-response-filter-webextension"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
